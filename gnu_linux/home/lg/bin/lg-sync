## This script uses rsync to ensure files or directories 
## are synced FROM master TO client systems

# source common configuration (gets rsync options)
. ${HOME}/etc/shell.conf

specified_source=$1
specified_destination=$2
self=$( hostname )

for lg in $LG_SCREENS; do
    if [[ "$lg" = "$self" ]]; then
        echo "skipping self"
    else
        echo
        echo "Syncing \"$specified_source\" to \"lg@$lg:${specified_destination}\": "
        rsync $RSYNCOPTS $specified_source lg@${lg}:${specified_destination}
    fi
done

exit 0
